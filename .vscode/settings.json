{
    "python.analysis.typeCheckingMode": "strict",
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "python.analysis.extraPaths": [
        "${workspaceFolder}",
        "${workspaceFolder}/src",
        "${workspaceFolder}/tests/features",
    ],
    "terminal.integrated.env.linux": {
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src:${workspaceFolder}/tests/features"
    },
    "python.analysis.autoImportCompletions": true,
    "python.analysis.stubPath": "${workspaceFolder}/tests/typings",
    "pylint.path": ["${workspaceFolder}/.venv/bin/pylint"],
    "pylint.args": [
        "--load-plugins=pylint_behave"
    ],
}